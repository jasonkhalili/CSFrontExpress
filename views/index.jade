extends layout

block content
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
          span.sr-only Toggle Navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          img.logo(src="/images/logo.png")
      .collapse.navbar-collapse#bs-example-navbar-collapse-1
        ul.nav.navbar-nav#center-nav
          li.nav-link: a(href="#") Link
          li.nav-link: a(href="#") Another Link
          li.nav-link: a(href="#") And Another
        ul.nav.navbar-nav.navbar-right
          if !user
            li
              a#steam(href="/auth/steam")
                i.fa.fa-steam
                |Sign in through Steam
          else
            li
              a#steam(href="#")
                img(src="#{user.photos[0].value}")
                |#{user.displayName}


  .container#pbar-container
    .row
      .col-md-12
        canvas#canvas(width="1820" height="100")
        p#numSkins 0 skins deposited

  #main
  #example

  if user
    script.
      var user_data = !{JSON.stringify(user)}

